<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spotify Streamer"
        android:id="@+id/app1"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:background="#e67e22"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scores App"
        android:id="@+id/app2"
        android:layout_below="@+id/app1"
        android:layout_alignLeft="@+id/app1"
        android:layout_alignStart="@+id/app1"
        android:layout_alignRight="@+id/app1"
        android:layout_alignEnd="@+id/app1"
        android:background="#e67e22"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library App"
        android:id="@+id/app3"
        android:layout_below="@+id/app2"
        android:layout_alignLeft="@+id/app2"
        android:layout_alignStart="@+id/app2"
        android:layout_alignRight="@+id/app2"
        android:layout_alignEnd="@+id/app2"
        android:background="#e67e22"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:id="@+id/app4"
        android:layout_below="@+id/app3"
        android:layout_alignRight="@+id/app3"
        android:layout_alignEnd="@+id/app3"
        android:layout_alignLeft="@+id/app3"
        android:layout_alignStart="@+id/app3"
        android:background="#e67e22"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ Reader"
        android:id="@+id/app5"
        android:layout_below="@+id/app4"
        android:layout_alignRight="@+id/app4"
        android:layout_alignEnd="@+id/app4"
        android:layout_alignLeft="@+id/app4"
        android:layout_alignStart="@+id/app4"
        android:background="#e67e22"
        android:layout_marginBottom="8dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/app6"
        android:layout_below="@+id/app5"
        android:layout_alignRight="@+id/app5"
        android:layout_alignEnd="@+id/app5"
        android:text="Capstone : MY OWN APP"
        android:layout_alignLeft="@+id/app5"
        android:layout_alignStart="@+id/app5"
        android:background="#c0392b"
        android:layout_marginBottom="8dp"/>
</RelativeLayout>
